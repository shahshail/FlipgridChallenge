<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/font_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryTextStyle" parent="BaseTextStyle">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="SecondaryTextStyle" parent="BaseTextStyle">
        <item name="android:textColor">@color/very_dark_gray</item>
    </style>

    <style name="SectionHeaderTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/font_extra_large</item>
        <item name="android:textColor">@color/very_dark_gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/TextInputLayoutShapeAppearance</item>
        <item name="strokeColor">@color/light_gray</item>
        <item name="boxStrokeColor">@color/light_gray</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="helperTextTextAppearance">@style/HelperTextAppearance</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/font_primary</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textColorHint">@color/dark_gray</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">@dimen/font_primary</item>
    </style>

    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/font_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputLayoutShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="BoarderLessButtonBaseStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">@dimen/font_primary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BoarderLessButtonWithGradientStyle" parent="BoarderLessButtonBaseStyle">
        <item name="android:background">@drawable/button_gradient_drawable</item>
        <item name="android:radius">12dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AvatarButtonStyle" parent="BoarderLessButtonBaseStyle">
        <item name="android:background">@drawable/button_rounded_drawable</item>
        <item name="android:scaleType">fitXY</item>
    </style>
</resources>